{
  "references": [
    { "path": "../../shared/event" },
    { "path": "../../shared/model" }
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "paths": {
      "@controller/*": ["./routes/controller/*"],
      "@models/*": ["./routes/models/*"]
    }
  },
  "exclude" : [ 
    "./build", 
    "./node_modules",
    "./test"
  ] 
}